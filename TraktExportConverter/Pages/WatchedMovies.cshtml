@page "{handler?}"
@model WatchedMoviesModel
@{
    ViewData["Title"] = "Watched Movies";
}

<div class="row justify-content-center">
    <div class="col-9">
        <table class="table table-striped" id="watched-movies-table">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th class="text-end">Watched</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<form method="post" enctype="multipart/form-data" id="import-form" class="d-none">
    <input asp-for="ImportFile" type="file" id="import-file" />
</form>

@section scripts
    {
    <script src="~/js/watched.js" asp-append-version="true"></script>
    <script src="~/js/watched-movies.js" asp-append-version="true"></script>
}